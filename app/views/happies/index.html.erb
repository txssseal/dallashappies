<div class = "row">
  <div class = "col-md-12 col-xs-12">
    
  <%= render 'layouts/search_form' %>
  <%#= link_to("Cant find your bar?", new_happy_path) %>
  <center><%= will_paginate @posts, :style => 'margin-top: -0.2em;' %></center>
  <center><%= link_to("Reset", root_path, :style => 'margin-top: -1em;') %></center>

    <div class = "table-responsive">
    
    <table class = "table table-striped">
      <thead>
        <tr>
          <th>Bar Name</th>
          <th>Day</th>
          <th>Location</th>
          <th>Deals</th>
          <th>Phone Number</th>
          <th>Show</th>
        </tr> 
      </thead>
      <tbody>
    
    <% @happies.order("day").each do |happy| %>
          <tr>
            <td><%= happy.id %></td>
            <td><%= happy.name %></td>
            <td><%= happy.day %></td>
            <td><%= happy.location %></td>
            <td><%= happy.deal %></td>
            <td><%= happy.phonenumber %></td>
            <td><%= link_to("Show", happy) %></td>
          </tr>
      <% end %>
    </tbody>
  </table>

  <center><%= will_paginate @posts %></center>
  <center><%= link_to("Reset", root_path) %></center>
 
</br>
</br>
  <center><small>Flip Studios</small></center>
  

  </div>
  </div>
</div>





